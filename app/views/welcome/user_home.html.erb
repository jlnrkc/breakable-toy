<div class="row">
  <div class="medium-6 columns">

    <%= image_tag current_user.photo.url(:small) %>

    <h4>Hi, <%= current_user.name %>!</h4>
    <%= link_to "Edit Account", edit_user_registration_path %>
  </div>
  <div class="medium-6 columns">
    <h4>Favorite Pets</h4>
    <% if @faves.present? %>
      <ul>
        <% @faves.each do |fave| %>
          <li><%= link_to fave.pet.name, fave.pet %></li>
        <% end %>
      </ul>
    <% else %>
      <em>You have no favorite pets yet<em>
    <% end %>
  </div>
</div>
